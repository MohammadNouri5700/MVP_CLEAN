<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="9dp"
    app:cardCornerRadius="@dimen/button_radius"
    android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_marginTop="-2dp"
            android:layout_marginStart="-2dp"
            android:layout_marginEnd="-2dp"
            android:layout_weight="0.4"
            android:scaleType="fitXY"
            android:layout_height="@dimen/big_items_size_recyclerview"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:padding="3dp">

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:textColor="@color/purple"
                android:text="12 usd"
                android:textStyle="bold"
                android:background="@drawable/border_purple_tr"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txt_detail"
                android:layout_width="75dp"
                android:layout_height="35dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/border_purple"
                android:gravity="center"
                android:text="@string/detail"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_price"
                app:layout_constraintTop_toBottomOf="@+id/txt_des" />


            <TextView
                android:id="@+id/txt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_des"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_name" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>